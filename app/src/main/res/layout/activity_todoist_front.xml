<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    tools:context=".views.implementations.TodoistFrontActivity"
    >

  <ImageView
      android:id="@+id/image_front_background"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:alpha="0"
      android:background="#616161"
      android:visibility="gone"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@mipmap/ic_launcher_round"
      tools:alpha="1"
      tools:visibility="visible"
      />
  <TextView
      android:id="@+id/textview_front_quote"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:background="@android:color/holo_purple"
      android:gravity="center"
      android:paddingBottom="16dp"
      android:paddingEnd="16dp"
      android:paddingStart="16dp"
      android:paddingTop="32dp"
      android:text="&quot; Ipsum is that it has a more-or-less normal distribution of letters, as opposed to using 'Content here, content
  here', making it look like readable English. Many desktop publishing packages and web page editors now use Lorem Ipsum as their default
  model text, and a search for 'lorem ipsum' &quot;"
      android:visibility="invisible"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:visibility="visible"
      />
  <android.support.v7.widget.RecyclerView
      android:id="@+id/recycler_front"
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginBottom="0dp"
      android:layout_marginLeft="0dp"
      android:layout_marginRight="0dp"
      android:layout_marginTop="0dp"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline8"
      />
  <android.support.constraint.Guideline
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:id="@+id/guideline8"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.66"
      />
</android.support.constraint.ConstraintLayout>
